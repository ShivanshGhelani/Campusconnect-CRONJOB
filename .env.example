# Campus Connect Monitoring Configuration - Vercel Deployment
# Copy this file to .env and fill in your values
# Add environment variables in Vercel dashboard for production

# === SERVICE CONFIGURATION ===
SERVICE_NAME="Campus Connect Backend"
SERVICE_URL="https://campusconnect-v2.onrender.com"
BASE_URL="https://campusconnect-v2.onrender.com"
CHECK_INTERVAL=60
TIMEOUT_SECONDS=10

# === EMAIL CONFIGURATION ===
# Gmail SMTP (recommended for reliability)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SENDER_EMAIL="your-email@gmail.com"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
FROM_EMAIL="your-email@gmail.com"
RECIPIENT_EMAIL="admin@example.com"
RECIPIENT_EMAILS="admin@example.com,alerts@example.com"

# Alternative SMTP providers:
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587
# Outlook: smtp-mail.outlook.com:587

# === EMAIL TEMPLATES ===
COMPANY_NAME="Campus Connect"
SUPPORT_EMAIL="support@campusconnect.com"

# === VERCEL CONFIGURATION ===
NODE_ENV=production
VERCEL=1
PYTHON_VERSION=3.12

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FILE=logs/uptime_logs.json

# === CRON CONFIGURATION ===
# Vercel Cron expressions (UTC timezone)
PING_CRON="*/1 * * * *"      # Every minute
REPORT_CRON="0 0 * * *"      # Daily at midnight UTC

# === SECURITY NOTE ===
# Never commit this file to version control!
# Use Gmail App Passwords instead of regular passwords
# Enable 2FA on your email account for security
# Configure these in Vercel environment variables dashboard